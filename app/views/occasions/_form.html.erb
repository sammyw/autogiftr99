<%= simple_form_for(@occasion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :occasion_type, collection: ['Birthday', 'Anniversay', "Valentine's Day"] %>
    <%= f.input :date %>
    <%= f.input :description %>
    <%= f.input :message %>
    <% if params[:recipient] %>
      <%= f.input :recipient_id, input_html: { value: params[:recipient] }, as: :hidden %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
